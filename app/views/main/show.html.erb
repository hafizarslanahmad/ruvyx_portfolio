<div class="page"> 
   <%= turbo_frame_tag "modal" do %>
      <div class="modal fade " tabindex="-1"  data-controller="modals">
      <div class="modal-dialog ">
         <div class="ml--600 modal-1 ">
            <div class="modal-header"> 
               <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body" id="remote_modal_body" >
            <%= yield %> 
               <div class="d-flex">
                  <div class="modal-img">  
                     <%= image_tag @designing.images, class: "modal-img"%> 
                  </div>
                  <div class="modal-tem">
                     <div class="modal-h">
                        <%= @designing.title %>
                     </div>
                     <div class="modal-p">
                        <%= @designing.description %>
                     </div>
                  </div>
               </div>  
            </div>
         </div>
      </div>
      </div>
   <% end %>
</div>
